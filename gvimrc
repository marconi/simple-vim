source ~/.vimrc

set antialias                     " MacVim: smooth fonts.
set encoding=utf-8                " Use UTF-8 everywhere.
set guioptions-=T                 " Hide toolbar.
set lines=50 columns=80           " Window dimensions.

set background=dark
colorscheme solarized
set guifont=Inconsolata:h14
set transparency=7

set showmatch

